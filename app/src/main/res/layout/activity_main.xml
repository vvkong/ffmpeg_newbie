<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="选择视频文件:"
            android:textSize="20sp"
            android:textColor="#f00"/>
        <Spinner
            android:id="@+id/sp_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#f00"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_get_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点我获取媒体信息"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_trans2yuv_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="trans2yuv version 1"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_trans2yuv_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="trans2yuv version 2"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_simple_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简单播放视频"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>
 <Button
        android:id="@+id/btn_simple_play_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简单播放音频"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_test_pthread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test pthread"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_play_av"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简简单单播放音视频"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_play_avv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简简单单播放音视频V2"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_opensles_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenSLES 播放声音"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"/>

</LinearLayout>
</ScrollView>