<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_get_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点我获取媒体信息"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_trans2yuv_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="trans2yuv version 1"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_trans2yuv_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="trans2yuv version 2"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btn_simple_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简单播放"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#333"
        android:padding="10dp"/>

</LinearLayout>